{
  "name": "philharmony/http-enum",
  "description": "HTTP enums for methods, status codes, and content types",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "http",
    "enum",
    "status-code",
    "content-type",
    "http-method",
    "request",
    "response"
  ],
  "homepage": "https://github.com/philharmonytech/http-enum",
  "authors": [
    {
      "name": "Vyacheslav86RUS",
      "email": "ProSlavon86@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Philharmony\\Http\\Enum\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Philharmony\\Http\\Enum\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-clover coverage.xml --coverage-html coverage --coverage-filter src",
    "phpstan": "phpstan analyse",
    "cs-check": "php-cs-fixer fix --dry-run --allow-risky=yes",
    "cs-fix": "php-cs-fixer fix --allow-risky=yes"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.1.34"
    },
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}